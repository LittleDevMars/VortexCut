<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:VortexCut.UI.ViewModels"
        xmlns:views="clr-namespace:VortexCut.UI.Views"
        xmlns:controls="clr-namespace:VortexCut.UI.Controls"
        xmlns:timeline="clr-namespace:VortexCut.UI.Controls.Timeline"
        mc:Ignorable="d" d:DesignWidth="1600" d:DesignHeight="900"
        x:Class="VortexCut.UI.Views.MainWindow"
        x:DataType="vm:MainViewModel"
        Title="VortexCut - Professional Video Editor"
        Width="1600" Height="900"
        MinWidth="1024" MinHeight="600"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BgBaseBrush}">

    <Window.KeyBindings>
        <KeyBinding Gesture="Space" Command="{Binding PlayPauseCommand}"/>
    </Window.KeyBindings>

    <Grid RowDefinitions="Auto, *, Auto">
        <!-- Custom TitleBar / Menu -->
        <Border Grid.Row="0" Background="{StaticResource BgHeaderBrush}" BorderThickness="0,0,0,1" BorderBrush="{StaticResource BorderBrush}">
        <Grid ColumnDefinitions="Auto, *, Auto, Auto" Height="38">
            <StackPanel Orientation="Horizontal" Spacing="12" Margin="12,0">
                <!-- App Logo/Title -->
                <Border Background="{StaticResource AccentBrush}" CornerRadius="4" Padding="8,4" VerticalAlignment="Center">
                    <TextBlock Text="VortexCut" FontWeight="Bold" Foreground="{StaticResource TextBrightBrush}" FontSize="12"/>
                </Border>

                <Menu Background="Transparent" BorderThickness="0" VerticalAlignment="Center">
                    <MenuItem Header="File">
                        <MenuItem Header="New Project" Command="{Binding CreateNewProjectCommand}" InputGesture="Ctrl+N"/>
                        <MenuItem Header="Open Project..." Command="{Binding LoadProjectCommand}" InputGesture="Ctrl+O"/>
                        <MenuItem Header="Import Media..." Command="{Binding OpenVideoFileCommand}" InputGesture="Ctrl+I"/>
                        <Separator/>
                        <MenuItem Header="Save Project" Command="{Binding SaveProjectCommand}" InputGesture="Ctrl+S"/>
                        <MenuItem Header="Save Project As..." Command="{Binding SaveProjectAsCommand}" InputGesture="Ctrl+Shift+S"/>
                        <Separator/>
                        <MenuItem Header="Export..." InputGesture="Ctrl+M"/>
                        <Separator/>
                        <MenuItem Header="Exit" InputGesture="Alt+F4"/>
                    </MenuItem>
                    <MenuItem Header="Edit">
                        <MenuItem Header="Undo" InputGesture="Ctrl+Z"/>
                        <MenuItem Header="Redo" InputGesture="Ctrl+Y"/>
                        <Separator/>
                        <MenuItem Header="Cut" InputGesture="Ctrl+X"/>
                        <MenuItem Header="Copy" InputGesture="Ctrl+C"/>
                        <MenuItem Header="Paste" InputGesture="Ctrl+V"/>
                        <MenuItem Header="Delete" InputGesture="Delete"/>
                    </MenuItem>
                    <MenuItem Header="View">
                        <MenuItem Header="Zoom In" InputGesture="Ctrl+Add"/>
                        <MenuItem Header="Zoom Out" InputGesture="Ctrl+Subtract"/>
                        <MenuItem Header="Fit to Window" InputGesture="Ctrl+D0"/>
                        <Separator/>
                        <MenuItem Header="Show Timeline" InputGesture="T"/>
                        <MenuItem Header="Show Inspector" InputGesture="I"/>
                    </MenuItem>
                    <MenuItem Header="Help">
                        <MenuItem Header="Documentation"/>
                        <MenuItem Header="Keyboard Shortcuts"/>
                        <Separator/>
                        <MenuItem Header="About VortexCut"/>
                    </MenuItem>
                </Menu>
            </StackPanel>

            <!-- Workspace Switcher -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="0" VerticalAlignment="Center">
                <Border Background="{StaticResource BgDarkBrush}" CornerRadius="4" Padding="2">
                    <StackPanel Orientation="Horizontal" Spacing="0">
                        <Button Classes="ToolButton" Content="Editing" Padding="12,6" CornerRadius="3" Background="{StaticResource AccentBrush}" Foreground="{StaticResource TextBrightBrush}" FontSize="11" FontWeight="SemiBold"/>
                        <Button Classes="ToolButton" Content="Color" Padding="12,6" CornerRadius="3" FontSize="11"/>
                        <Button Classes="ToolButton" Content="Audio" Padding="12,6" CornerRadius="3" FontSize="11"/>
                        <Button Classes="ToolButton" Content="Effects" Padding="12,6" CornerRadius="3" FontSize="11"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Status / Project Info -->
            <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="8" Margin="12,0">
                <PathIcon Data="{StaticResource IconFolder}" Width="14" Height="14" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" Margin="0,0,4,0"/>
                <TextBlock Text="{Binding ProjectName}" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center" FontSize="13" FontWeight="SemiBold"/>
            </StackPanel>
        </Grid>
        </Border>

        <!-- Main Workspace -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" MinHeight="300" />
                <RowDefinition Height="2" />
                <RowDefinition Height="*" MinHeight="250" />
            </Grid.RowDefinitions>

            <!-- Upper Pane -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300" MinWidth="200"/>
                    <ColumnDefinition Width="2"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2"/>
                    <ColumnDefinition Width="300" MinWidth="200"/>
                </Grid.ColumnDefinitions>

                <!-- 1. Project Bin -->
                <Grid Grid.Column="0" RowDefinitions="Auto, *">
                    <Border Classes="PanelHeader">
                        <TextBlock Classes="PanelTitle" Text="PROJECT BIN"/>
                    </Border>
                    <views:ProjectBinView Grid.Row="1" DataContext="{Binding ProjectBin}" Background="{StaticResource BgPanelBrush}"/>
                </Grid>
                <GridSplitter Grid.Column="1" ResizeDirection="Columns" Background="{StaticResource BgBaseBrush}"/>

                <!-- 2. Source Monitor -->
                <views:SourceMonitorView Grid.Column="2"/>
                
                <GridSplitter Grid.Column="3" ResizeDirection="Columns" Background="{StaticResource BgBaseBrush}"/>

                <!-- 3. Program Monitor -->
                <views:ProgramMonitorView Grid.Column="4"/>
                
                <GridSplitter Grid.Column="5" ResizeDirection="Columns" Background="{StaticResource BgBaseBrush}"/>

                <!-- 4. Inspector -->
                <views:InspectorView Grid.Column="6"/>
            </Grid>

            <GridSplitter Grid.Row="1" ResizeDirection="Rows" Background="{StaticResource BgBaseBrush}"/>

            <!-- Lower Pane: Timeline -->
            <views:TimelinePanelView Grid.Row="2" DataContext="{Binding}"/>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{StaticResource BgHeaderBrush}" BorderThickness="0,1,0,0" BorderBrush="{StaticResource BorderBrush}">
            <Grid ColumnDefinitions="Auto, *, Auto" Height="28" Margin="12,0">
                <!-- Left: Status Message -->
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <TextBlock Text="●" Foreground="{StaticResource SuccessBrush}" VerticalAlignment="Center" FontSize="10"/>
                    <TextBlock Text="Ready" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center" FontSize="11"/>
                </StackPanel>

                <!-- Center: System Stats -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="16" HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <TextBlock Text="GPU:" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" FontSize="11"/>
                        <TextBlock Text="0%" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center" FontSize="11" FontWeight="SemiBold"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <TextBlock Text="RAM:" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center" FontSize="11"/>
                        <TextBlock Text="0.0 GB" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center" FontSize="11" FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>

                <!-- Right: Render Queue -->
                <Button Grid.Column="2" Classes="ToolButton" Padding="8,4" ToolTip.Tip="Render Queue">
                    <StackPanel Orientation="Horizontal" Spacing="6">
                        <PathIcon Data="{StaticResource IconFilm}" Width="12" Height="12" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                        <TextBlock Text="Render Queue" Foreground="{StaticResource TextPrimaryBrush}" FontSize="11" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- Toast Notification Container (우측 하단 오버레이) -->
        <Grid x:Name="ToastContainer"
              Grid.Row="0" Grid.RowSpan="3"
              IsHitTestVisible="False"
              ZIndex="1000">
            <!-- ToastService에서 동적으로 Toast를 추가 -->
        </Grid>
    </Grid>
</Window>
