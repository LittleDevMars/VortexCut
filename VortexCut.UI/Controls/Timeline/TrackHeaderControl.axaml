<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:VortexCut.UI.Controls.Timeline"
             mc:Ignorable="d" d:DesignWidth="60" d:DesignHeight="60"
             x:Class="VortexCut.UI.Controls.Timeline.TrackHeaderControl"
             x:DataType="controls:TrackHeaderControl">

    <Border BorderBrush="#444444" BorderThickness="0,0,1,1">
        <Border.Background>
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="0%,100%">
                <GradientStop Color="#2D2D30" Offset="0"/>
                <GradientStop Color="#252527" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid RowDefinitions="Auto,Auto,*,Auto">
            <!-- íŠ¸ëž™ ë²ˆí˜¸/íƒ€ìž… ë°°ì§€ -->
            <Border Grid.Row="0"
                    Background="#007ACC"
                    Padding="4,2"
                    CornerRadius="0,0,8,8"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,4">
                <TextBlock Text="{Binding Track.Index}"
                           FontSize="10"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
            </Border>

            <!-- íŠ¸ëž™ ì´ë¦„ -->
            <TextBox Grid.Row="1"
                     Name="TrackNameTextBox"
                     Text="{Binding Track.Name}"
                     FontSize="11"
                     FontWeight="SemiBold"
                     Background="Transparent"
                     BorderThickness="0"
                     Padding="4,2"
                     HorizontalAlignment="Center"/>

            <!-- ë²„íŠ¼ ì˜ì—­ -->
            <StackPanel Grid.Row="2" Orientation="Vertical" Spacing="2" Margin="4">
                <!-- Mute ë²„íŠ¼ -->
                <ToggleButton Name="MuteButton"
                              IsChecked="{Binding Track.IsMuted}"
                              Content="M"
                              Width="50" Height="20"
                              FontSize="10"
                              Padding="0"
                              ToolTip.Tip="Mute"/>

                <!-- Solo ë²„íŠ¼ -->
                <ToggleButton Name="SoloButton"
                              IsChecked="{Binding Track.IsSolo}"
                              Content="S"
                              Width="50" Height="20"
                              FontSize="10"
                              Padding="0"
                              ToolTip.Tip="Solo"/>

                <!-- Lock ë²„íŠ¼ -->
                <ToggleButton Name="LockButton"
                              IsChecked="{Binding Track.IsLocked}"
                              Content="ðŸ”’"
                              Width="50" Height="20"
                              FontSize="10"
                              Padding="0"
                              ToolTip.Tip="Lock"/>
            </StackPanel>

            <!-- ë†’ì´ ì¡°ì ˆ ê·¸ë¦½ (Phase 2A í›„ë°˜) -->
            <Border Grid.Row="3"
                    Name="ResizeGrip"
                    Height="4"
                    Background="#007ACC"
                    Cursor="SizeNorthSouth"
                    ToolTip.Tip="Drag to resize track"/>
        </Grid>
    </Border>
</UserControl>
